<h1>一覧画面</h1>
<%= link_to "新規登録画面へ", new_user_path %>
<% @user.each do |user| %>
  <p>
    <%= user.name %>
    <%= user.age %>
    <%= link_to "詳細", user_path(user), class: "btn btn-lg btn-primary"  %>
    <%= link_to "編集", edit_user_path(user), class: "btn btn-lg btn-primary" %>
    <%= link_to "削除", user_path(user), class: "btn btn-lg btn-primary", method: :delete, data: {confirm: "削除しますか？"} %>
  </p>
<% end %>
